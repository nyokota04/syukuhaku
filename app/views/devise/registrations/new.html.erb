<div class ="sign">
<h1>Sign up</h1>

<h1>新規登録</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :ユーザー名, class: "label" %>
      <%= f.text_field :user_name, autofocus: true, autocomplete: "email", :placeholder => "ユーザー名", class: "input" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス, class: "label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",:placeholder => "メールアドレス", class: "input" %>
  </div>

  <div class="field">
    <%= f.label :パスワード, class: "label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",:placeholder => "パスワード", class: "input" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認, class: "label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",:placeholder => "パスワード確認", class: "input" %>
  </div>

  <div class="actions">
    <%= f.submit "新しいアカウントを作成", class: "submit_btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>


